<div class="center jumbotron">
<h2>プロフィール編集</h2>

<%= form_with model:@user, local:true do |f| %>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    <div class="field">
    <%= f.label :profile_image, "プロフィール画像" %><br />
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    </div>

    <div class="field">
    <%= f.label :name, "ユーザーネーム" %><br />
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>

    <div class="field">
    <%= f.label :bio, "自己紹介" %><br />
    <%= f.text_area :bio, :size=>"60x5", placeholder:"自己紹介"%>
    </div>

    <div class="actions">
    <%= f.submit "変更を保存",data: { disable_with: '送信中...' } %>
    </div>
<% end %>
</div>
