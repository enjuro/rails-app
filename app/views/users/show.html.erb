<h1><%= @user.name %></h1>
<div class="row">
    <div class="col-4">
        <div class="sidebar-fixed">
            <div class="profile-image">
            <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %>
            </div>
            <% if @user.id == current_user.id %>
                <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
            <% end %>
            <p>ユーザーネーム：<%= @user.name %> </p>
            <p>自己紹介：<%= @user.bio %> </p>
        </div>
    </div>

    <div class="col">
        <h2>いいねした課題一覧</h2>
        <div class="scroll-list jscroll">
            <div class="card-list-container">
            <% @favorite_post_images.each do |post_image| %>
                <div class="card mx-auto mt-2 shadow-lg">
                    <%= attachment_image_tag post_image, :image, class:"card-img-top" %>
                    <%= render 'post_images/list', post_image: post_image %>
                </div>
            <% end %>
            </div>
        </div>
    </div>
</div>

