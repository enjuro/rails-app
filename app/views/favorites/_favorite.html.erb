<% if post_image.favorited_by?(current_user) %>
    <%= link_to post_image_favorites_path(post_image), method: :delete, remote: true, class: "favorite_btn" do %>
        <button type="button" class="btn btn-success">いいね済</button>
    <% end %>
<% else %>
    <%= link_to post_image_favorites_path(post_image), method: :post, remote: true, class: "favorite_btn" do %>
       <button type="button" class="btn btn-outline-success">いいね！</button>
    <% end %>
<% end %>