<h1>画像投稿フォーム</h1>
<% if @post_image.errors.any? %>
  <%= @post_image.errors.count %>件のエラーが発生しました
  <% @post_image.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @post_image, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>難易度</h4>
  <%= f.select :grade, grade_hash.invert, include_blank: '選択してください' %>
  <h4>ホールドの色</h4>
  <%= f.text_field :color %>
  <h4>壁の種類</h4>
  <%= f.select :wall_type, wall_type_hash.invert, include_blank: "選択して下さい" %>
  <h4>説明</h4>
  <%= f.text_area :caption %>
  <h4>課題掲載期間</h4>
  <%= f.date_select :duration %>
  <%= f.submit '投稿' %>
<% end %>