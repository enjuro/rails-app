<h1>画像投稿フォーム</h1>
<%= form_with model: @post_image, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>難易度</h4>
  <%= f.select :grade, [["8級", "8"],
                        ["7級", "7"],
                        ["6級", "6"],
                        ["5級", "5"],
                        ["4級", "4"],
                        ["3級", "3"],
                        ["2級", "2"],
                        ["1級", "1"],
                        ["1段", "-1"],
                        ["2段", "-2"]],
                        include_blank: "選択して下さい" %>
  <h4>ホールドの色</h4>
  <%= f.text_field :color %>
  <h4>壁のエリア（角度/種類）</h4>
  <%= f.select :wall_type, [["スラブ", "slab"],
                              ["垂壁", "90"],
                              ["薄かぶり:100°,120°", "100"],
                              ["どっかぶり:130°~", "130"],
                              ["ルーフ", "roof"],
                              ["マントル", "mantle"]],
                              include_blank: "選択して下さい" %>

  <h4>説明</h4>
  <%= f.text_area :caption %>
  <%= f.submit '投稿' %>
<% end %>